{{# each products }}
<div class="card-deck">
  {{# each this }}

  <div class="card">
    <img src="{{this.imagePath}}" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">{{this.title}}</h5>
      <p class="card-text">{{this.description}}.</p>
      <div class="col-md-6 col-sm-6">
        <div class="col-md-6 col-sm-6">
          <p class="price">${{this.price}}</p>
        </div>
        <a href="/add-to-cart/{{this._id}}"> <button class="btn btn-info right"> BUY
            ITEM</button></a>
      </div>
    </div>
  </div>
  {{/each}}
</div>

{{/each}}